<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robles.savingdata.MainActivity">



    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:textColor="black"
        />

    <EditText
        android:id="@+id/et_Data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvData"
        android:layout_marginLeft="130dp"
        />

    <TextView
        android:id="@+id/tvFilename"
        android:layout_below="@id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filename:"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="black"
        />

    <EditText
        android:id="@+id/et_Filename"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvFilename"
        android:layout_marginLeft="130dp"
        />

    <Button
        android:id="@+id/butSP"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Filename"
        android:text="Shared Pref"
        android:onClick="saveSharedPreference"
        />

    <Button
        android:id="@+id/butIS"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/butSP"
        android:text="Internal Storage"
        android:onClick="saveInternalStorage"
        />

    <Button
        android:id="@+id/butIC"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/butIS"
        android:text="Internal Cache"
        android:onClick="saveInternalCache"
        />

    <Button
        android:id="@+id/butEC"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/butIC"
        android:text="External Cache"
        android:onClick="saveExternalCache"
        />

    <Button
        android:id="@+id/butES"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/butEC"
        android:text="External Storage"
        android:onClick="saveExternalStorage"
        />

    <Button
        android:id="@+id/butEPS"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/butES"
        android:text="Ext Public Storage"
        android:onClick="saveExternalPublic"
        />

    <Button
        android:id="@+id/butNext"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/butEPS"
        android:text="Next"
        android:onClick="next"
        />


</RelativeLayout>